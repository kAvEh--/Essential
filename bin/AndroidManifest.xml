    <application
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.glass.essentialwords.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.glass.essentialwords.ExerciseActivity"
            android:label="@string/title_activity_excrecise" >
        </activity>
        <activity
            android:name="com.glass.essentialwords.LessonActivity"
            android:label="@string/title_activity_lesson" >
        </activity>
        <activity
            android:name="com.glass.essentialwords.EnteranceActivity"
            android:label="@string/title_activity_enterance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.glass.essentialwords.LeitnerActivity"
            android:label="@string/title_activity_leitner" >
        </activity>
        <activity
            android:name="ir.adad.AdadActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.glass.essentialwords.HelpActivity"
            android:label="@string/title_activity_help" >
